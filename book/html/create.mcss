Create -book {
  section.content input {
    border: 1px solid gainsboro
    margin-left: 5px
    margin-bottom: 5px
    padding: 5px
  }

  section.content textarea {
    border: 1px solid gainsboro
    width: 600px
    height: 250px
  }

  -contracted {
    section.actions {
      display: none
    }
    section.content {
      display: none
    }
  }
  
  -expanded {
    section.actions {
      display: block
    }
    section.content {
      display: block
    }
  }
}

